#include <stdio.h>

int main(){
 int num1,num2,num3,operacao;
 
 printf("1 = +\n2 = -\n3 = * \n4 = /\n");
 
 printf("escolha um operacao matematica\n");
scanf("%d", &operacao);

printf("informe um numero\n");
scanf("%d", &num1);
printf("informe outro numero\n");
scanf("%d", &num2);

switch(operacao){
  case 1:
      num3= num1+num2;
      printf("a soma dos dois numero e \n%d",num3);
      break;
  case 2:
      num3 = num1-num2;
      printf("a subtracao dos numero e \n%d", num3);
      break;
  case 3:
     num3 = num1*num2;
     printf("o resultado do produto desses numeros e \n %d",num3);
     break;
  case 4:
     num3 = num1/num2;
     printf("a divisao entre os numero e %d \n",num3);
     break;
  default:
     printf("operacao invalida escolha um numero entre 1 e 4 \n");
     break;
}
}
